DEFAULT harddisk
PROMPT 1
TIMEOUT 10

label harddisk
   localboot 0x80

LABEL liveboot
MENU LABEL ArchNetboot
KERNEL /vmlinuz
append ip=dhcp checksum=y initrd=/archiso.img archisobasedir=arch archiso_http_srv={{pxe_mirror}}

{% for plan in partition_plans %}
LABEL {{ plan }}
MENU LABEL ArchAutoInstall
KERNEL /x86_64/vmlinuz
append ip=dhcp checksum=y initrd=/x86_64/archiso.img archisobasedir=arch archiso_http_srv={{pxe_mirror}} script={{pxe_script}} partition_plan={{ plan }} 

LABEL {{ plan }}x32
MENU LABEL ArchAutoInstall
KERNEL /i686/vmlinuz
append ip=dhcp checksum=y initrd=/i686/archiso.img archisobasedir=arch archiso_http_srv={{pxe_mirror}} script={{pxe_script}} partition_plan={{ plan }} 
{% endfor %}


LABEL manual
MENU LABEL ArchAutoInstall
KERNEL /x86_64/vmlinuz
append ip=dhcp checksum=y initrd=/x86_64/archiso.img archisobasedir=arch archiso_http_srv={{pxe_mirror}} script={{pxe_script}}

LABEL manualx32
MENU LABEL ArchAutoInstall
KERNEL /i686/vmlinuz
append ip=dhcp checksum=y initrd=/i686/archiso.img archisobasedir=arch archiso_http_srv={{pxe_mirror}} script={{pxe_script}}
